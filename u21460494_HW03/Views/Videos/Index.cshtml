@using u21460494_HW03.Models
@model List<FileModel>

@{
    ViewBag.Title = "Index";
}


<div class="well-sm">
    <h2>Video of any file type</h2>
    <p>
        Files from the "Media/Images/" folder
    </p>
</div>


<div class="row">

    @foreach (FileModel file in Model)
    {
    <div class=" col-md-4">
        <video width="320" height="240"  controls>
            <source src="~/Media/Videos/@file.FileName" type="video/mp4">
        </video>
        <p>@file.FileName</p>

        <input type="button" value="Download" class="btn btn-success" onclick="location.href='@Url.Action("DownloadFile", new { fileName = file.FileName })'" />

        <input type="button" value="Download" class="btn btn-success" onclick="location.href='@Url.Action("DownloadFile", new { fileName = file.FileName })'" />

        @*<button type="button" class="btn btn-danger">
            @Html.ActionLink("DELETE", "DeleteFile",
            new { fileName = file.FileName },
            new { onclick = "return confirm('Are you sure you wish to delete this?');" })
        </button>*@

    </div>
    }
</div>



